<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlantActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_manage_plant">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="64dp"
        android:text="Data tanaman baru"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtNameP"
        android:layout_width="276dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Nama Tanaman"
        android:inputType="text"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/edtAreaP"
        android:layout_width="279dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Luas Area Tanam"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toStartOf="@+id/edtNameP"
        app:layout_constraintTop_toBottomOf="@+id/edtNameP" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="251dp"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/button"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Calendar" />

    <ImageView
        android:id="@+id/edtCategoryP"
        android:layout_width="34dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/edtAreaP"
        app:layout_constraintTop_toBottomOf="@+id/edtAreaP"
        app:srcCompat="@drawable/icon_add_plant2" />

    <TextView
        android:id="@+id/CategoryP"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Pilih Jenis Tumbuhan"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/edtCategoryP"
        app:layout_constraintTop_toBottomOf="@+id/edtAreaP" />

    <ImageView
        android:id="@+id/calendar"
        android:layout_width="34dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/edtCategoryP"
        app:layout_constraintTop_toBottomOf="@+id/edtCategoryP"
        app:srcCompat="@android:drawable/ic_menu_my_calendar" />

    <TextView
        android:id="@+id/Calendar"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:text="Tanggal mulai tanam"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/calendar"
        app:layout_constraintTop_toTopOf="@+id/calendar" />


</androidx.constraintlayout.widget.ConstraintLayout>

