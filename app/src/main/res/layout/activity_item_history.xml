
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:contentPadding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Daftarhistory"
        android:layout_width="match_parent"
        android:layout_height="90dp" >

        <TextView
            android:id="@+id/statushistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/status_history_done"
            android:drawablePadding="12dp"
            android:text="Pending"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tanggalhistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="12 Juli 2019"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pupukhistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pupuk NPK Mutiara"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/statushistory"
            app:layout_constraintTop_toBottomOf="@+id/statushistory" />

        <TextView
            android:id="@+id/tanggalnotif3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150 gr"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/tanggalhistory"
            app:layout_constraintTop_toTopOf="@+id/pupukhistory" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>